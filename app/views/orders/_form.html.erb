<%= form_with model: [ @order ] do |form| %>
  <%= form.hidden_field :run_id %>
  <div class="flex flex-col gap-2">
  <%= form.fields_for :item_orders do |item_order_form| %>
    <%= render "item_orders/form", item_order_form: item_order_form %>
  <% end %>
  </div>

  <p class="p-2">
    <%= form.submit class: 'btn-primary' %>
  </p>
<% end %>
